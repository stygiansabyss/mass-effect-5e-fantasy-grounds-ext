<?xml version="1.0" encoding="iso-8859-1"?>
<root>
    <!-- Character Defenses Window -->
    <windowclass name="me5e_defenses">
        <frame name="content">
            <titlebar name="title" text="Character Defenses" />
            <sheetdata>
                <!-- Simple test content -->
                <label name="test_label">
                    <anchored>
                        <top offset="20" />
                        <left offset="10" />
                    </anchored>
                    <static text="Mass Effect Defenses" />
                </label>
                
                <!-- Barrier section -->
                <label name="barrier_label">
                    <anchored to="test_label" position="below" offset="0,30">
                        <left />
                    </anchored>
                    <static text="Barrier Uses:" />
                </label>
                <stringu name="barrier_uses">
                    <anchored to="barrier_label" position="right" offset="5,0" height="20" width="40">
                        <top />
                    </anchored>
                </stringu>
                <button_stringcycler name="barrier_activate">
                    <anchored to="barrier_label" position="below" offset="0,20" height="20" width="100">
                        <left />
                    </anchored>
                    <parameters>
                        <defaultlabelres>Activate</defaultlabelres>
                        <labelsres>Activate</labelsres>
                        <values>activate</values>
                    </parameters>
                </button_stringcycler>
                
                <!-- Tech Armor section -->
                <label name="techarmor_label">
                    <anchored to="barrier_activate" position="below" offset="0,30">
                        <left />
                    </anchored>
                    <static text="Tech Armor Uses:" />
                </label>
                <stringu name="techarmor_uses">
                    <anchored to="techarmor_label" position="right" offset="5,0" height="20" width="40">
                        <top />
                    </anchored>
                </stringu>
                <button_stringcycler name="techarmor_activate">
                    <anchored to="techarmor_label" position="below" offset="0,20" height="20" width="100">
                        <left />
                    </anchored>
                    <parameters>
                        <defaultlabelres>Activate</defaultlabelres>
                        <labelsres>Activate</labelsres>
                        <values>activate</values>
                    </parameters>
                </button_stringcycler>
            </sheetdata>
        </frame>
        <script file="scripts/window_defenses.lua" />
    </windowclass>
</root>