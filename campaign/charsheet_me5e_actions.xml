<?xml version="1.0" encoding="iso-8859-1"?>
<root>
    <!-- Mass Effect 5e Actions Tab Extension -->
    <windowclass name="charsheet_actions_contents" merge="join">
        <sheetdata>
            <!-- ME5e Defenses section - positioned above weapons -->
            <header_content_framed_metalplate name="me5e_defenses_header">
				<anchored to="contentanchor" width="20" height="20">
					<top />
					<left relation="relative" offset="0" postoffset="0" />
				</anchored>
            </header_content_framed_metalplate>
            <label_charframetop name="me5e_defenses_title">
                <anchored to="me5e_defenses_header" position="insidetopleft" offset="5,2" height="20">
                    <right offset="-5" />
                </anchored>
                <static textres="me5e_defenses_title" />
            </label_charframetop>
            
            <!-- Barrier section -->
            <label name="barrier_label">
                <anchored to="me5e_defenses_header" position="insidebottomleft" offset="10,5">
                    <right anchor="center" offset="-5" />
                </anchored>
                <static textres="me5e_barrier_uses" />
            </label>
            <stringu name="barrier_uses">
                <anchored to="barrier_label" position="right" offset="5,0" height="20" width="40">
                    <top />
                </anchored>
            </stringu>
            <buttoncontrol name="barrier_activate">
                <anchored to="barrier_label" position="below" offset="0,20" height="20" width="80">
                    <left />
                </anchored>
                <icon normal="button_small" />
                <text>Activate</text>
            </buttoncontrol>
            
            <!-- Tech Armor section -->
            <label name="techarmor_label">
                <anchored to="barrier_activate" position="below" offset="0,25">
                    <right anchor="center" offset="-5" />
                </anchored>
                <static textres="me5e_techarmor_uses" />
            </label>
            <stringu name="techarmor_uses">
                <anchored to="techarmor_label" position="right" offset="5,0" height="20" width="40">
                    <top />
                </anchored>
            </stringu>
            <buttoncontrol name="techarmor_activate">
                <anchored to="techarmor_label" position="below" offset="0,20" height="20" width="80">
                    <left />
                </anchored>
                <icon normal="button_small" />
                <text>Activate</text>
            </buttoncontrol>
        </sheetdata>
        <script file="scripts/charsheet_me5e_actions.lua" />
    </windowclass>
</root>
